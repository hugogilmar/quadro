<% if page.errors.size > 0 %>
  $("#quadro-modal .modal-body").html("<%= escape_javascript(render(partial: 'quadro/pages/edit', locals: { page: page })) %>");
  new Message('Page not updated');
<% else %>
  $("#quadro-modal").modal('hide');
  new Message('Page updated');
  location.href = "<%= escape_javascript(page_path(page)) %>";
<% end %>
