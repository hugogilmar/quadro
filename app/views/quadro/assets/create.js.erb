<% if @asset.persisted? %>
  <% case @asset.type.constantize.short_name %>
  <% when 'image' %>
    $('.asset-list').filter('[data-assetable-type="<%= @asset.assetable.class.to_s %>"],[data-assetable-id="<%= @asset.assetable.id %>"]').append('<%= escape_javascript(render("quadro/assets/image", image: @asset))%>')
  <% when 'slide' %>
  $('.asset-list').filter('[data-assetable-type="<%= @asset.assetable.class.to_s %>"],[data-assetable-id="<%= @asset.assetable.id %>"]').append('<%= escape_javascript(render("quadro/assets/slide", slide: @asset))%>')
  <% end %>
  new Message('Asset created');
<% else %>
  new Message('Asset not created');
<% end %>
